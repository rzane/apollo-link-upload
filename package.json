{
  "name": "graphql-file-uploads",
  "version": "0.0.0",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "jest": {
    "projects": [
      "packages/*"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "scripts": {
    "prerelease": "bin/clean && bin/build",
    "release": "lerna publish",
    "postinstall": "bin/build",
    "build": "bin/build",
    "clean": "bin/clean",
    "test": "jest",
    "format": "prettier --write '**/*.{js,ts,tsx}'",
    "format:check": "prettier --check '**/*.{js,ts,tsx}'"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@types/graphql": "^14.2.3",
    "@types/jest": "^24.0.16",
    "graphql": "^14.4.1",
    "graphql-tag": "^2.10.1",
    "jest": "^24.8.0",
    "lerna": "^3.16.4",
    "lodash": "^4.17.15",
    "prettier": "^1.18.2",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.3"
  }
}
